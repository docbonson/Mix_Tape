<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mixTape_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/retro_beige"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/img_mixTape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/retro_light_blue"
            android:src="@drawable/cassette" />

        <TextView
            android:id="@+id/tv_mixTapeTitle"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/img_mixTape"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="117dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="-167dp"
            android:fontFamily="casual"
            android:text="Placeholder"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_play_from_list"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_play"
            android:layout_alignBottom="@+id/img_mixTape"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="279dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="334dp"
            android:background="@drawable/player_button_background"
            android:src="@drawable/ic_play"
            app:tint="#4CAF50" />

        <View
            android:id="@+id/view_play"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_above="@id/img_mixTape"
            android:layout_alignBottom="@+id/img_mixTape"
            android:background="#424040" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/view_play"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="@+id/view_play"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="127dp"
            android:layout_toStartOf="@+id/btn_view_more"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/view_play"
            android:layout_alignParentBottom="@+id/view_play"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="66dp"
            android:layout_toStartOf="@+id/btn_view_more"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignTop="@+id/view_play"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_share" />

        <ImageButton
            android:id="@+id/btn_view_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/view_play"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="176dp"
            android:background="@drawable/player_button_background"
            android:src="@drawable/ic_view_more"
            android:tint="@color/black" />

        <!--        <LinearLayout-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="50dp"-->
        <!--            android:layout_alignBottom="@+id/view_play"-->
        <!--            android:layout_marginTop="50dp"-->
        <!--            android:background="@color/black">-->

        <!--            <TextView-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:text="Hello" />-->


        <!--        </LinearLayout>-->
    </RelativeLayout>


</androidx.cardview.widget.CardView>